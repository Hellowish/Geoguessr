<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 透明度從0到1，並且從小到大 -->
    <alpha
        android:fromAlpha="0"
        android:toAlpha="1"
        android:duration="350"/>
    <scale
        android:fromXScale="0.5"
        android:fromYScale="0.5"
        android:toXScale="1"
        android:toYScale="1"
        android:duration="350"/>
</set>